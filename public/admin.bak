<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - ISP Lookup</title>
  <link rel="stylesheet" href="styles.tailwind.css" />
  <link rel="icon" href="img/favicon.ico" />
</head>
<body class="font-sans" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px;">

  <!-- Login/Register Section -->
  <div id="auth-section" class="w-full max-w-xs mx-auto">
    <div class="bg-white rounded-3xl px-6 py-8 border border-gray-100" style="box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.35), 0 0 15px rgba(0, 0, 0, 0.1);">
      <h1 class="text-3xl font-bold text-center mb-4 text-blue-600">Sign in</h1>

      <!-- Logo -->
      <div class="flex justify-center mb-6">
        <img src="/img/us_isp_logos/generic_logo.png" alt="Logo" style="max-height: 80px; width: auto;" class="object-contain" />
      </div>

      <!-- Login Form -->
      <form id="login-form" class="space-y-4">
        <div>
          <label for="login-email" class="block mb-2 font-medium text-gray-700 text-sm text-center">Email</label>
          <input type="email" id="login-email" required placeholder="you@example.com" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div>
          <label for="login-password" class="block mb-2 font-medium text-gray-700 text-sm text-center">Password</label>
          <input type="password" id="login-password" required placeholder="••••••••" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div id="login-error" class="text-red-600 text-sm hidden text-center"></div>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold text-lg transition-colors">Sign In</button>
      </form>

      <!-- Toggle to Register -->
      <div class="text-center mt-6">
        <p class="text-gray-600 text-sm">
          Don't have an account?
          <button id="show-register" class="text-blue-600 hover:text-blue-700 font-semibold">Sign up</button>
        </p>
      </div>

      <!-- Register Form -->
      <form id="register-form" class="space-y-4 hidden">
        <div>
          <label for="register-firstname" class="block mb-2 font-medium text-gray-700 text-sm text-center">First Name</label>
          <input type="text" id="register-firstname" required placeholder="John" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div>
          <label for="register-lastname" class="block mb-2 font-medium text-gray-700 text-sm text-center">Last Name</label>
          <input type="text" id="register-lastname" required placeholder="Doe" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div>
          <label for="register-email" class="block mb-2 font-medium text-gray-700 text-sm text-center">Email</label>
          <input type="email" id="register-email" required placeholder="you@example.com" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div>
          <label for="register-password" class="block mb-2 font-medium text-gray-700 text-sm text-center">Password</label>
          <input type="password" id="register-password" required minlength="6" placeholder="••••••••" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 transition-colors text-center" />
        </div>
        <div id="register-error" class="text-red-600 text-sm hidden text-center"></div>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold text-lg transition-colors">Sign Up</button>
      </form>

      <!-- Toggle back to Login (shown when on register form) -->
      <div id="back-to-login" class="text-center mt-6 hidden">
        <p class="text-gray-600 text-sm">
          Already have an account?
          <button id="show-login" class="text-blue-600 hover:text-blue-700 font-semibold">Sign in</button>
        </p>
      </div>
    </div>
  </div>

  <!-- Dashboard Section (Hidden by default) -->
  <div id="dashboard-section" class="max-w-7xl mx-auto hidden">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Admin Dashboard</h1>
      <div class="space-x-2">
        <span id="user-name" class="text-gray-600"></span>
        <button id="logout-btn" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Logout</button>
        <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded inline-block">Back to Home</a>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="bg-white border border-gray-300 rounded-lg p-6 shadow">
        <h3 class="text-sm text-gray-600 mb-1">Total Queries</h3>
        <p class="text-3xl font-bold text-blue-600" id="total-queries">0</p>
      </div>
      <div class="bg-white border border-gray-300 rounded-lg p-6 shadow">
        <h3 class="text-sm text-gray-600 mb-1">Current Page</h3>
        <p class="text-3xl font-bold text-green-600" id="current-page">1</p>
      </div>
      <div class="bg-white border border-gray-300 rounded-lg p-6 shadow">
        <h3 class="text-sm text-gray-600 mb-1">Total Pages</h3>
        <p class="text-3xl font-bold text-purple-600" id="total-pages">0</p>
      </div>
    </div>

    <!-- Search and Controls -->
    <div class="bg-white border border-gray-300 rounded-lg p-6 shadow mb-6">
      <div class="flex flex-col md:flex-row gap-4 items-end">
        <div class="flex-1">
          <label for="search-input" class="block mb-1 font-medium">Search</label>
          <input
            type="text"
            id="search-input"
            placeholder="Search by IP, organization, or logo..."
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-400"
          />
        </div>
        <div>
          <label for="sort-field" class="block mb-1 font-medium">Sort By</label>
          <select id="sort-field" class="px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-400">
            <option value="created_at">Date</option>
            <option value="searched_ip">Searched IP</option>
            <option value="organization_name">Organization</option>
            <option value="visitor_ip">Visitor IP</option>
            <option value="wan_panel">WAN Panel</option>
          </select>
        </div>
        <div>
          <label for="sort-order" class="block mb-1 font-medium">Order</label>
          <select id="sort-order" class="px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-400">
            <option value="desc">Descending</option>
            <option value="asc">Ascending</option>
          </select>
        </div>
        <div>
          <label for="page-size" class="block mb-1 font-medium">Per Page</label>
          <select id="page-size" class="px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-400">
            <option value="25">25</option>
            <option value="50" selected>50</option>
            <option value="100">100</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Table -->
    <div class="bg-white border border-gray-300 rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-100 border-b border-gray-300">
            <tr>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">ID</th>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">Searched IP</th>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">Organization</th>
              <th class="px-1 py-2 text-left text-xs font-semibold text-gray-700 uppercase">Logo</th>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">Visitor IP</th>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">WAN</th>
              <th class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase">Date</th>
              <th class="px-2 py-2 text-center text-xs font-semibold text-gray-700 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody id="queries-table-body" class="divide-y divide-gray-200">
            <tr>
              <td colspan="8" class="px-4 py-8 text-center text-gray-500">Loading...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-6">
      <button
        id="prev-page"
        class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded disabled:bg-gray-300 disabled:cursor-not-allowed"
        disabled
      >
        Previous
      </button>
      <div class="text-sm text-gray-600">
        Page <span id="page-info">1 of 1</span>
      </div>
      <button
        id="next-page"
        class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded disabled:bg-gray-300 disabled:cursor-not-allowed"
        disabled
      >
        Next
      </button>
    </div>
  </div>

  <script src="admin.js?v=10"></script>
</body>
</html>
